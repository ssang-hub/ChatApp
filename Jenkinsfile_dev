pipeline {
    agent{
        any
    }
    stages{
        stage('building, deploying backend app'){
            steps{
                withDockerRegistry(credentialsId: 'dockerhub', url: 'https://index.docker.io/v1/'){
                    sh 'cd api && docker compose up -d --build'
                    sh 'cd api && docker compose push'
                }
            }
        }
    }
    post{
        always{
            cleanWs()
        }
    }
}